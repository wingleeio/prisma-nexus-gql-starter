{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "plugins": [
            {
                "name": "nexus/typescript-language-service"
            }
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "rootDir": ".",
        "isolatedModules": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "types.d.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "."
    ]
}